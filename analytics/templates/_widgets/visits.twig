{% extends "analytics/_widgets/_layout" %}

{% includeJsResource 'analytics/js/widget.js' %}

{% block body %}

	<div class="analyticsTabs">
		<ul class="analyticsNav">
			<li><a href="#week">Week</a></li>
			<li><a href="#month">Month</a></li>
			<li><a href="#year">Year</a></li>
		</ul>

		<div class="clear"></div>

		<div class="analyticsTab hidden">
			{% include 'analytics/_widgets/_chart' with {
			    settings: {
					title:"Audience : Visits",
					chartType:'column',
					dimensions:'ga:day, ga:month, ga:year',
					metric:'ga:visits',
					periodQuantity: 1,
					periodUnit: 'week'
				}
			} %}
		</div>

		<div class="analyticsTab hidden">
			{% include 'analytics/_widgets/_chart' with {
			    settings: {
					title:"Audience : Visits",
					chartType:'column',
					dimensions:'ga:day, ga:month, ga:year',
					metric:'ga:visits',
					periodQuantity: 1,
					periodUnit: 'month'
				}
			} %}
		</div>

		<div class="analyticsTab hidden">
			{% include 'analytics/_widgets/_chart' with {
			    settings: {
					title:"Audience : Visits",
					chartType:'column',
					dimensions:'ga:day, ga:month, ga:year',
					metric:'ga:visits',
					periodQuantity: 1,
					periodUnit: 'year'
				}
			} %}
		</div>
	</div>


{% endblock %}