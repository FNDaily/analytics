{% extends "analytics/_layout" %}

{% set content %}

    <div class="chartBlock chartBlockS">
        {% include 'analytics/_chart' with {
            metric: 'ga:visits',
            dimensions:'ga:year, ga:month, ga:day',
            chartOptions: {
                title: 'Visits',
                chartType:'column',
                chartArea : {
                    width:'100%',
                    height: '100%',
                    top: 20,
                    bottom: 0
                }
            }

        } %}
    </div>
	<hr />
    <div class="chartBlock half">
        {% include 'analytics/_chart' with {
            metric: 'ga:visits',
            dimensions:'ga:country',
            title: 'Countries',
            type:'donut'
        } %}
    </div>

    <div class="chartBlock half">
        {% include 'analytics/_chart' with {
            metric: 'ga:visits',
            dimensions:'ga:isMobile',
            title: 'Is Mobile',
            type:'donut'
        } %}
    </div>

    <hr />

    <div class="chartBlock chartBlockS">
        {% include 'analytics/_chart' with {
            metric: 'ga:visits',
            dimensions:'ga:year, ga:month, ga:day',
            title: 'Visits',
            chartOptions: {
                title: 'Visits',
                chartType:'table',
                chartArea : {
                    width:'100%',
                    height: '100%',
                    top: 20,
                    bottom: 0
                }
            }

        } %}
    </div>

    <div class="clear"></div>
{% endset %}