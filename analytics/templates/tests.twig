{% extends "analytics/_layout" %}

{% set content %}

    <h2 class="center">Last 30 days</h2>

    {% include 'analytics/_chart' with {
        half:false,
        metric: 'ga:visits',
        dimensions:'ga:year, ga:month, ga:day',
        title: 'Visits'
    } %}

    {% include 'analytics/_chart' with {
        half:true,
        metric: 'ga:visits',
        dimensions:'ga:country',
        title: 'Countries',
        type:'donut'
    } %}

    {% include 'analytics/_chart' with {
        half:true,
        metric: 'ga:visits',
        dimensions:'ga:isMobile',
        title: 'Is Mobile',
        type:'column'
    } %}

    {% include 'analytics/_chart' with {
        half:true,
        metric: 'ga:visits',
        dimensions:'ga:socialNetwork',
        title: 'Social Networks',
        type:'donut'
    } %}


    {% include 'analytics/_chart' with {
        half:true,
        metric: 'ga:visits',
        dimensions:'ga:source',
        title: 'Sources',
        type:'donut'
    } %}

    <div class="clear"></div>
{% endset %}